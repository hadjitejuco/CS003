#include <iostream>
#include <conio.h>
#include <windows.h>
using namespace std;
//total col and rows is 80x24
void gotoxy(int x, int y);  	//function prototyping
int main(){
	//gotoxy(col,row);
	//calling the function with arguments
	cout << "\nHello World1\n";
	cout << "Hello World1";
	gotoxy(80,4);
	cout << "Hello World2";	
	system ("pause>0");
	system ("cls");
	
	gotoxy(15,10);
	cout << "Hello World2";	
	gotoxy(45,24);
	cout << "Hello World3";	
	//
	getch(); //character  (pause)
	system ("pause>0");
	
	return 0;
}
//function for gotoxy
//user defined function
void gotoxy(int x, int y)
{
  static HANDLE h = NULL;  
  if(!h)
    h = GetStdHandle(STD_OUTPUT_HANDLE);
  COORD c = { x, y };  
  SetConsoleCursorPosition(h,c);
}
