//display 1 - 10 (FOR LOOP)
#include <iostream>	//1 3 6 10 15
using namespace std;	
int main(){				
	int i,n,s=0;			//i		i<=n	s	i++
	cout << "Enter n ";	//	1		t		1	2
	cin >> n; 			//			t		3	3		
	for (i=1;i<=n;i++){	//			t		6	4
		s=s+i;			//			t		10	5	
	}					//			t		15	6	
	cout << "The sum is " << s; //	f	
	return 0;
}
