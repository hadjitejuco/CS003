#include<iostream>
using namespace  std;
int  main()  {  
	char  choice;  
	int  x  ,  y;    
	while(1) { 
		system("cls");
		cout  <<  "MENU"  <<  endl;  
		cout  <<  "[A]  -  addition\n";      
		cout  <<  "[S]  -  subtraction\n";      
		cout  <<  "[M]  -  multiplication\n";      
		cout  <<  "[D]  -  division\n";      
		cout  <<  "[X]  -  exit\n";  
		cout  <<  "Enter  your  choice:  ";      
		cin  >>  choice;  
		switch(choice){  
			case'a':  case'A':  
				
				cout  <<  "\nADDITION\n";    
				cout  <<  "Enter  first  number:  ";    
				cin  >>  x;    
				cout  <<  "Enter  second  number:  ";    
				cin  >>  y;    
				cout  <<  "The  sum  is  "  <<  x+y;
				break;  
			
			case's':  case'S':  break;  
				
				cout  <<  "\nSubtraction\n";    
				cout  <<  "Enter  first  number:  ";    
				cin  >>  x;    
				cout  <<  "Enter  second  number:  ";    
				cin  >>  y;    
				cout  <<  "The  diff  is  "  <<  x-y;
				break;  
			case'm':  case'M': break;  
				
				cout  <<  "\nMultiplication\n";    
				cout  <<  "Enter  first  number:  ";    
				cin  >>  x;    
				cout  <<  "Enter  second  number:  ";    
				cin  >>  y;    
				cout  <<  "The  prod  is  "  <<  x*y;
				break;  
			case'd':  case'D': 
			
				cout  <<  "\nDIVISION\n";    
				
				cout  <<  "Enter  first  number:  ";    
				cin  >>  x;    
				cout  <<  "Enter  second  number:  ";  
				cin  >>  y;  
					if(y==0)      
						cout  <<  "Undefined!";  
					else    
						cout  <<  "The  qoutient  is  "  <<  x/y;
					break;  
			case'x':  case'X':          
				cout  <<  "Thank  you!\n";  
				system("pause");        
				exit(1);  break; 
			default:          
				cout  <<  "Invalid  Input!";      
			}  
			system("pause>0");  
			}    
		return 0;
	}    
	
