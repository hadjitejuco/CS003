/*
Enter n: 12
sum of series
1+4+7+10+13+16+19+22+25+28+31+34 = 210
*/
#include <iostream>
using namespace std;
int main(){
	int n, i, j=1, s=0;
	cout <<"Enter n: ";
	cin >> n;
	cout << "\nSum of the series\n";
	i=1;
	while(i<=n){
		s=s+j;
		cout << j;
		if (i<n)
			cout << "+";
		j=j+3;
		i++;
	}
	cout << " = " << s;
	return 0;
}
